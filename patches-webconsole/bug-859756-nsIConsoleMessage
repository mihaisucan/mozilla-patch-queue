+NS_IMETHODIMP
+nsConsoleMessage::ToString(nsACString& /*UTF8*/ aResult)
+{
+  if (!mCategory.IsEmpty())
+    aResult.Assign(mCategory + NS_LITERAL_CSTRING(": ") +
+                   NS_ConvertUTF16toUTF8(mMessage));
+  else
+    CopyUTF16toUTF8(mMessage, aResult);
+
+  return NS_OK;
+}
