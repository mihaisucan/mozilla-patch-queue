+/**
+ * Creates an actor for the specified object.
+ *
+ * @constructor
+ * @param object aObj
+ *        The object you want.
+ * @param object aWebConsoleActor
+ *        The parent WebConsoleActor instance for this object.
+ */
+function WebConsoleObjectActor(aObj, aWebConsoleActor)
+{
+  this.obj = aObj;
+  this.parentActor = aWebConsoleActor;
+}
+
+WebConsoleObjectActor.prototype =
+{
+  actorPrefix: "consoleObj",
+
+  /**
+   * Returns a grip for this actor for returning in a protocol message.
+   */
+  grip: function WCOA_grip()
+  {
+    let className = null;
+    let type = typeof this.obj;
+
+    let result = {
+      "type": type,
+      "className": WebConsoleUtils.getObjectClassName(this.obj),
+      "displayString": WebConsoleUtils.formatResult(this.obj),
+      "inspectable": WebConsoleUtils.isObjectInspectable(this.obj),
+      "actor": this.actorID,
+    };
+
+    if (type == "function") {
+      result.functionName = WebConsoleUtils.getFunctionName(this.obj);
+      result.functionArguments = WebConsoleUtils.getFunctionArguments(this.obj);
+    }
+
+    return result;
+  },
+
+  /**
+   * Releases this actor from the pool.
+   */
+  release: function WCOA_release()
+  {
+    this.parentActor.releaseObject(this);
+  },
+
+  /**
+   * Handle a protocol request to inspect the properties of the object.
+   *
+   * @return object
+   *         Message to send to the client. This holds the 'properties' property
+   *         - an array with a descriptor for each property in the object.
+   */
+  onInspectProperties: function WCOA_onInspectProperties()
+  {
+    if (!WebConsoleUtils.isObjectInspectable(this.obj)) {
+      return {
+        from: this.actorID,
+        properties: [],
+      };
+    }
+
+    let properties = [];
+    let isDOMDocument = this.obj instanceof Ci.nsIDOMDocument;
+    let deprecated = ["width", "height", "inputEncoding"];
+
+    for (let name in this.obj) {
+      // See bug 632275: skip deprecated properties.
+      if (isDOMDocument && deprecated.indexOf(name) > -1) {
+        continue;
+      }
+
+      try {
+        let desc = WebConsoleUtils.getPropertyDescriptor(this.obj, name);
+        properties.push(this._propertyDescriptor(name, desc || {}));
+      }
+      catch (ex) {
+        dump("Error while getting the property descriptor for " + name +
+              ": " + ex + "\n");
+      }
+    }
+
+    properties.sort(WebConsoleUtils.propertiesSort);
+
+    return {
+      from: this.actorID,
+      properties: properties,
+    };
+  },
+
+  /**
+   * A helper method that creates a property descriptor for the provided object,
+   * properly formatted for sending in a protocol response.
+   *
+   * @private
+   * @param string aProperty
+   *        Property name for which we have the descriptor.
+   * @param object aObject 
+   *        The object that the descriptor is generated for.
+   * @return object
+   *         The property descriptor formatted for sending to the client.
+   */
+  _propertyDescriptor: function WCOA__propertyDescriptor(aProperty, aObject)
+  {
+    let descriptor = { name: aProperty };
+    descriptor.configurable = aObject.configurable;
+    descriptor.enumerable = aObject.enumerable;
+    descriptor.writable = aObject.writable;
+    if (aObject.value !== undefined) {
+      descriptor.value = this.parentActor.createValueGrip(aObject.value);
+    }
+    else {
+      if (WebConsoleUtils.isNativeFunction(aObject.get)) {
+        descriptor.value = this.parentActor.createValueGrip(this.obj[aProperty]);
+      }
+      else if (aObject.get) {
+        descriptor.get = this.parentActor.createValueGrip(aObject.get);
+        descriptor.set = this.parentActor.createValueGrip(aObject.set);
+      }
+    }
+
+    // There are cases with properties that have no value and no getter. For
+    // example window.screen.width.
+    if (descriptor.value === undefined && descriptor.get === undefined) {
+      descriptor.value = this.parentActor.createValueGrip(this.obj[aProperty]);
+    }
+
+    return descriptor;
+  },
+
+  /**
+   * Handle a protocol request to release a thread-lifetime grip.
+   *
+   * @param aRequest object
+   *        The protocol request object.
+   */
+  onRelease: function WCOA_onRelease(aRequest)
+  {
+    this.release();
+    return {};
+  },
+};
+
+WebConsoleObjectActor.prototype.requestTypes =
+{
+  "inspectProperties": WebConsoleObjectActor.prototype.onInspectProperties,
+  "release": WebConsoleObjectActor.prototype.onRelease,
+};
+
