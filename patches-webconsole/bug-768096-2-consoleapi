+   */
+  onAutocomplete: function WCA_onAutocomplete(aRequest)
+  {
+    let result = JSPropertyProvider(this.window, aRequest.text) || {};
+    return {
+      from: this.actorID,
+      matches: result.matches || [],
+      matchProp: result.matchProp,
+    };
+  },
